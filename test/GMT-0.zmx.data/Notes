
case $1 in 
 clear)
    for s in 1 2 3 4 5 6 7; do
	for r in x y rx ry ; do
	    aco set S$s $r 0
	done
    done

    aco push
    ;;
 data)
    for s in 1 2 3 4 5 6 7; do
	for r in x y rx ry; do
	    aco set S$s $r 0
	done
    done

    aco  rays nx 100 ny 100 start 1 end -1
    aco push

    aco rays end  1						# Trace rays to surface 1 (planar).
    aco raytable > start.rays	

    aco rays end -1	 					# Trace rays to image plane.
    aco raytable > image.rays

    err=.0001

    for s in 1 2 3 4 5 6 7; do
	for r in x y rx ry; do
	    aco set S$s $r $err
	    aco push
	    sleep 2
	    aco raytable > S$s-$r.rays
	    aco set S$s $r 0
	done
    done
    ;;
esac

