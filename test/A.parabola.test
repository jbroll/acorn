#!/usr/bin/env tclkit8.6
#
lappend auto_path ./lib ../lib

package require acorn
source  acorn-model.tcl

acorn::model Parabolic {
    surface A	{ R    0.0	K  0.0	n  1.00	thickness 	 200 }
    surface B	{ R -400.0	K -1.0	n -1.00	thickness	-200 }
    surface C	{ R    0.0	K  0.0	n  1.00	thickness	   0 }
}

acorn::Rays new rays 9

set i 0
foreach x { -25 0 25 } {
    foreach y { -25 0 25 } {
	rays $i set px $x py $y pz 0 kx 0.0 ky 0.0 kz 1.0
	incr i
    }
}

Parabolic trace rays


puts "x     	y     	z      "
puts "-------	-------	-------"
puts [join [map row [rays 0 end get px py pz] { join [map x $row { format "% .4f" $x }] \t }] \n]


